{
    "openapi": "3.0.0",
    "info": {
        "title": "Reservas QR — Auth API",
        "description": "API con Laravel Sanctum (tokens personales). Login exclusivo para rol `validator`.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/api",
            "description": "Local"
        },
        {
            "url": "https://tu-dominio-o-cloudflared/api",
            "description": "Staging/Producción"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login (solo rol validator)",
                "description": "Devuelve un token Bearer si el usuario existe, password válido y role=validator.",
                "operationId": "17911fbfbd5e7f3c84e5c58066a96e64",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login correcto",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Rol no permitido",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validación fallida",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationError"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Perfil del usuario autenticado",
                "operationId": "cf8a59997666bcd8a2afc7e2ee549f86",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/MeResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Cerrar sesión (revoca token actual)",
                "operationId": "548bc6da3d6d9494cb678c84b8d0a886",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Message"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "validator@demo.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secreta"
                    },
                    "device": {
                        "description": "Nombre del dispositivo/cliente para identificar el token",
                        "type": "string",
                        "example": "android",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "User": {
                "required": [
                    "id",
                    "email",
                    "role"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 4
                    },
                    "name": {
                        "type": "string",
                        "example": "Validador Demo",
                        "nullable": true
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "validator@demo.com"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "admin",
                            "validator",
                            "customer"
                        ],
                        "example": "validator"
                    }
                },
                "type": "object"
            },
            "LoginResponse": {
                "required": [
                    "token_type",
                    "token",
                    "user"
                ],
                "properties": {
                    "token_type": {
                        "type": "string",
                        "example": "Bearer"
                    },
                    "token": {
                        "type": "string",
                        "example": "1|S1lZ7NMzSFP5D628ARIRqS..."
                    },
                    "user": {
                        "$ref": "#/components/schemas/User"
                    }
                },
                "type": "object"
            },
            "MeResponse": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 4
                    },
                    "name": {
                        "type": "string",
                        "example": "Validador Demo"
                    },
                    "email": {
                        "type": "string",
                        "example": "validator@demo.com"
                    },
                    "role": {
                        "type": "string",
                        "example": "validator"
                    }
                },
                "type": "object"
            },
            "PingResponse": {
                "properties": {
                    "ok": {
                        "type": "boolean",
                        "example": true
                    }
                },
                "type": "object"
            },
            "Message": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Sesión cerrada."
                    }
                },
                "type": "object"
            },
            "Error": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "No autenticado."
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The email field must be a valid email address."
                    },
                    "errors": {
                        "type": "object",
                        "example": {
                            "email": [
                                "The email field must be a valid email address."
                            ]
                        },
                        "additionalProperties": {
                            "schema": "Schemas",
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "Schemas": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "apiKey",
                "description": "Enter token in format: Bearer <token>",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        }
    ],
    "security": [
        {
            "bearerAuth": []
        }
    ]
}